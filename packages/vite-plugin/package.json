  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hydephp/vite-plugin/issues"
  },
  "homepage": "https://github.com/hydephp/vite-plugin",
  "peerDependencies": {
    "vite": "^6.3.5"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "terser": "^5.29.2",
    "typescript": "^5.0.0",
    "vite": "^6.3.5"
  }
}
