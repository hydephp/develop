{
    "name": "hyde/testing",
    "description": "Testing helpers for HydePHP.",
    "keywords": [
        "hyde",
        "hydephp",
        "testing"
    ],
    "homepage": "https://github.com/hyde/testing",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Emma De Silva",
            "email": "emma@desilva.se",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/support": "^10.0",
        "laravel/dusk": "^8.2.2",
        "mockery/mockery": "^1.4.4",
        "pestphp/pest": "^v2.1.0",
        "ext-dom": "*",
        "ext-libxml": "*"
    },
    "autoload": {
        "psr-4": {
            "Hyde\\Testing\\": "src"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Hyde\\Testing\\TestingServiceProvider"
            ]
        }
    }
}
